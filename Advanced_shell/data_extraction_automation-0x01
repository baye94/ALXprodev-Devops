#!/bin/bash

# Ensure data.json exists
if [ ! -f data.json ]; then
  echo "Error: data.json not found."
  exit 1
fi

# Extract fields using jq
NAME=$(jq -r '.name' data.json | sed 's/.*/\u&/') # Capitalize first letter
HEIGHT=$(jq -r '.height' data.json | awk '{printf "%.1f", $1/10}') # Decimeters to meters
WEIGHT=$(jq -r '.weight' data.json | awk '{printf "%.0f", $1/10}') # Hectograms to kg
TYPE=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/') # Capitalize type

# Print formatted output
echo "$NAME is of type $TYPE, weighs ${WEIGHT}kg, and is ${HEIGHT}m tall."
