#!/bin/bash

POKEMONS=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
DEST_DIR="pokemon_data"
mkdir -p "$DEST_DIR"

PIDS=()

fetch_pokemon() {
    local name=$1
    local url="https://pokeapi.co/api/v2/pokemon/$name"

    echo "Fetching data for $name..."
    curl -s "$url" -o "$DEST_DIR/${name}.json"
    if [ $? -eq 0 ]; then
        echo "Saved data to $DEST_DIR/${name}.json âœ…"
    else
        echo "Failed to fetch $name" >> errors.txt
    fi
}

# Lancer tous les fetchs en arriÃ¨re-plan
for name in "${POKEMONS[@]}"; do
    fetch_pokemon "$name" &
    PIDS+=($!)  # Stocker le PID
done

# VÃ©rifier les jobs
jobs

# Simuler un timeout ou une interruption
sleep 2
echo "Too long... killing all remaining fetches ğŸ˜¤"
for pid in "${PIDS[@]}"; do
    kill "$pid" 2>/dev/null
done

# Attendre la fin des processus (mÃªme ceux qu'on a kill pour nettoyage)
wait

echo "âœ… Script terminÃ©."
